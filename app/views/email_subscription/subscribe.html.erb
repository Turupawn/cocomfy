<!-- section -->
<div class="section border-top">
  <div class="container">
    <!-- box 1 -->
    <div class="row align-items-center col-spacing-50">
      <div class="col-12 col-md-6">
        <img src="/images/email_confirmation.png" alt="">
      </div>
      <div class="col-12 col-md-6">
        <h6 class="heading-uppercase">Email subscription</h6>
        <% if @error_message %>
          Error: 
          <h4>Woops! Error found</h4>
          <p><%= @error_message %></p>
        <% else %>
          <h4>You are almost there!</h4>
          <p>Please confirm email to complete your subscription.</p>
        <% end%>
      </div>
    </div>
  </div>
</div>